{
  "name": "org.lightningrodlabs.we-electron-alpha",
  "version": "0.0.1",
  "private": true,
  "description": "Holochain Launcher Electron (Prototype)",
  "main": "./out/main/index.js",
  "workspaces": [
    "libs/*",
    "utils/*",
    "src/renderer",
    "example/ui"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "concurrently \"yarn run publish:applets\" \"electron-vite dev\"",
    "build": "yarn typecheck && electron-vite build",
    "setup": "cd libs/rust-utils && yarn && yarn build && cd ..",
    "publish:applets": "run-singleton \"node scripts/publish-applets.mjs\"",
    "build:libs": "yarn workspace @lightningrodlabs/we-applet build && yarn workspace @lightningrodlabs/we-elements build && yarn workspace @lightningrodlabs/attachments build && yarn workspace grapes-editor build",
    "build:rust-utils": "yarn workspace hc-launcher-rust-utils build && rimraf node_modules/hc-launcher-rust-utils && yarn install --check-files",
    "build:applet-iframe": "yarn workspace applet-iframe build",
    "build:utils": "yarn workspace applet-iframe install && yarn build:applet-iframe && yarn workspace hc-launcher-rust-utils install && yarn workspace hc-launcher-rust-utils build",
    "fetch:default-apps": "curl -L --output resources/default-apps/kando.webhapp https://drive.switch.ch/index.php/s/nSXZlwCYFAl9aRD/download",
    "build:happ": "npm run build:zomes && hc app pack ./workdir --recursive",
    "build:zomes": "cargo build --release --target-dir target --target wasm32-unknown-unknown --workspace --exclude we-alpha",
    "build:example": "yarn build:libs && yarn build:zomes && yarn workspace example-applet package && rimraf testing-applets/example-applet && cp example/workdir/example-applet.webhapp testing-applets ",
    "build:ex": "yarn workspace example-applet package && cp example/workdir/example-applet.webhapp testing-applets/$NAME.webhapp",
    "download:devhub": "curl -L --output DevHub.webhapp https://github.com/holochain/devhub-gui/releases/download/v0.16.1/devhub.webhapp",
    "download:appstore": "curl -L --output AppStore.webhapp https://github.com/holochain/app-store-gui/releases/download/v0.4.0/appstore.webhapp",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "yarn build && electron-builder --win --config",
    "build:mac": "yarn build && electron-builder --mac --config",
    "build:linux": "yarn build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@holochain/client": "0.16.6",
    "bufferutil": "4.0.8",
    "electron-context-menu": "3.6.1",
    "hc-launcher-rust-utils": "file:./utils/rust-utils/dist",
    "mime-types": "2.1.35",
    "split": "1.0.1",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^18.17.5",
    "@types/mime-types": "2.1.4",
    "adm-zip": "^0.5.10",
    "concurrently": "^6.2.1",
    "electron": "^25.6.0",
    "electron-builder": "^24.6.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "get-port": "7.0.0",
    "js-yaml": "^4.1.0",
    "lit": "3.1.0",
    "prettier": "^3.0.2",
    "typescript": "^5.2.2",
    "utf-8-validate": "^6.0.3",
    "rimraf": "5.0.5",
    "run-singleton-cli": "^0.0.7",
    "vite": "^4.4.9",
    "vite-plugin-static-copy": "^0.13.1"
  }
}
